<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%- edit.name %></li>
  </ol>
</nav>
<div class="row">
  <div class="col-12 col-md-4">
    <img
      src="/uploads/<%- edit.image %>"
      class="img-fluid"
      style="top: 20px"
      alt="<%- edit.name %>"
      loading="lazy"
    />
  </div>
  <div class="col-12 col-md-8">
    <div class="row">
      <div class="col-12">
        <h1><%- edit.name %></h1>
        <form action="/recipe/<%= edit._id %>?_method=PUT" method="POST">
          <input type="text" name="name" value="<%= edit.name %>" />
          <input type="submit" value="update" />
        </form>
      </div>

      <div class="col-12 mb-4">
        <i class="bi bi-tag"></i> <%- edit.category %>
        <form action="/recipe/<%= edit._id %>?_method=PUT" method="POST">
          <input type="text" name="category" value="<%= edit.category %>" />
          <input type="submit" value="update" />
        </form>
      </div>

      <div class="col-12" style="white-space: pre-line">
        <h4>Cooking Instructions</h4>
        <%- edit.description %>
        <form action="/recipe/<%= edit._id %>?_method=PUT" method="POST">
          <input
            type="text"
            name="description"
            value="<%= edit.description %>"
          />
          <input type="submit" value="update" />
        </form>
      </div>
    </div>

    <div class="row pt-4">
      <div class="col-12">
        <h4>Ingredients</h4>
        <ul class="list-group list-group-flush">
          <% edit.ingredients.forEach((ing, index)=>{ %>
          <li class="list-group-item"><%= ing %></li>
          <form action="/recipe/<%= edit._id %>?_method=PUT" method="POST">
            <input
              type="text"
              name="ingredients"
              value="<%= edit.ingredients %>"
            />
            <input type="submit" value="update" />
          </form>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</div>
