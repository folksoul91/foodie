<div class="index-container row flex-lg-row-reverse">
  <div class="index-layout col-12 col-lg-6">
    <img
      src="/img/index-main.png"
      alt="foodbowl"
      class="index-img d-block mx-lg-auto img-fluid"
    />
  </div>
  <div class="col-lg-6">
    <h1 class="index-h1">The largest selection of unique recipes</h1>
    <p>
      Explore the largest selection of easy yet tasty recipes. Find everything
      from desserts, to gluten free, to international cusine. Explore now and
      discover your recipes to share with your friends and families!
    </p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a href="/trending" class="btn btn-dark btn-lg">See Trending</a>
      <a href="/categories" class="btn btn-outline-secondary btn-lg"
        >Food Category</a
      >
    </div>
  </div>
</div>

<!-- Category -->
<div class="category-div row row-cols-2 row-cols-lg-6 g-2 g-lg-3">
  <% if (categories !== '') { %> <% categories.forEach((category, index) =>{ %>
  <a
    href="/categories/<%- category.name %>"
    class="col text-center category-link"
  >
    <div class="category-img shadow">
      <img src="img/<%- category.image %>" alt="<%- category.name %>" />
    </div>
    <div class="pt-1"><%- category.name %></div>
  </a>
  <% }) %> <% } %>
</div>

<!-- Trending Recipes -->
<section class="trending-secion">
  <div class="d-flex mb-2 align-items-center">
    <h2>Trending Recipes</h2>
    <a href="#" class="ms-auto">Explore More</a>
  </div>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if (trending !== '') { %> <% trending.forEach((recipe, index)=>{ %>
    <a href="/recipe/<%= recipe._id %>" class="col text-center trending-link">
      <div class="trending-img shadow">
        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" />
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
    <% }) %> <% } %>
  </div>
</section>

<!-- submit -->
<section class="submit-section px-4 py-5 my-5 text-center">
  <img
    class="d-block mx-auto mb-4 img-fluid"
    width="566"
    height="208"
    src="img/submit.png"
    alt=""
  />
  <h1 class="display-5 fw-bold">Publish your recipe</h1>
  <p class="lead mb-4">
    Publish your recipe on the world's largest recipe platform and get your
    recipe in front of millions of people.
  </p>
  <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
    <a href="/submit-recipe" class="btn btn-primary btn-dark btn-lg"
      >Submit Recipe</a
    >
  </div>
</section>
