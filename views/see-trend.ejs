<h1 class="pb-4">See Trending</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if (recipe !== '') { %> <% recipe.forEach((recipe, index)=>{ %>
  <a href="/recipe/<%= recipe._id %>" class="col text-center trending-link">
    <div class="trending-img shadow">
      <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" />
    </div>
    <div class="pt-1"><%= recipe.name %></div>
  </a>
  <% }) %> <% } else { %>
  <p>No recipes found...</p>
  <% } %>
</div>
